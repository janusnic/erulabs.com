doctype html
html(lang='en')
  head
    title Erulabs.com
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href=assetURL+'assets/bundle.css')
  body(data-ng-app='erulabs')
    .container-fluid
      .row
        .sidebar.col-md-2
          .intro
            .small Hi! I'm
            a.name(href='/') Seandon Mooy
            .small and I am a
            ul.about
              li
                a(href='/devops/') DevOps Engineer
              li
                a(href='/javascript/') Javascript Fanboy
              li
                a(href='/fullstack/') Fullstack Coder
              li
                a(href='/gamedev/') Game Developer
              li
                a(href='/linux/') Linux Nerd
              li
                a(href='/rants/') Raving Ranter
              li
                a(href='/hacker/') Hapless Hacker
            .bottom
              div Read my&nbsp;
                a(href='/resume') resume
              div then&nbsp;
                a(href='mailto:seandon.mooy@gmail.com') contact me
      .row
        #blog.sitecontainer(data-ng-controller='BlogCtrl')
          .col-md-2 &nbsp;
          .resume.col-md-10(data-ng-show="resume")
            include ./resume.jade
          .blog.col-md-10(data-ng-hide="resume")
            .sorry(data-ng-show="sorry")
              div Sorry,
              div {{ sorry }}
            .post(data-ng-repeat="(title, post) in postList", data-ng-show="post.visible")
              .page-header
                h1.title
                  a(href="/{{ urlize(title) }}") {{ unurlize(title) }}
                .subtitle
                  span(data-ng-show="post.categories.length")
                    span in
                    span(data-ng-repeat="(i, cat) in post.categories")
                      span &nbsp;
                      span(data-ng-hide="i < post.categories.length-1") and&nbsp;
                      a(href="/{{ urlize(cat) }}") /{{ cat }}
                      span(data-ng-hide="i > post.categories.length-3") ,
                  span &nbsp;by Seandon Mooy - {{ post.date }}
              .post-body(data-ng-bind-html="post.html")
    script(async, data-manual, type='text/javascript', src=assetURL+'assets/bundle.js')
